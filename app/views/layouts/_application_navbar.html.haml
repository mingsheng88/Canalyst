.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
      %a.navbar-brand{:href => home_index_path} Canalyst

    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          %a{:href => "#"} Home
        %li
          %a{:href => "#about"} About
        %li
          %a{:href => "#contact"} Contact

      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li 
            %a{:href => edit_user_registration_path} Logged in as #{current_user.email}
          %li 
            %a{:href => destroy_user_session_path, 'data-method' => :delete} Logout
        - else
          %li 
            %a{:href => new_user_registration_path} Sign up now
          %li 
            %a{:href => new_user_session_path} Login